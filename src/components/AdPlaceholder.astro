---
interface Props {
  variant?: 'content-end' | 'sidebar';
}

const { variant = 'content-end' } = Astro.props;

const ads = [
    {
        href: "https://px.a8.net/svt/ejp?a8mat=4AVAC8+AQECDU+55QO+5YRHE",
        label: "イヤホン・ヘッドホン専門店【e☆イヤホン】",
        imgRx: "https://www13.a8.net/0.gif?a8mat=4AVAC8+AQECDU+55QO+5YRHE"
    },
    {
        href: "https://px.a8.net/svt/ejp?a8mat=4AVAC8+D8ASQA+2QOI+1BN3TU",
        label: "トレトク - トレカの激安通販",
        imgRx: "https://www18.a8.net/0.gif?a8mat=4AVAC8+D8ASQA+2QOI+1BN3TU"
    },
    {
        href: "https://px.a8.net/svt/ejp?a8mat=4AVAC8+DDNP6A+5IYS+5YJRM",
        label: "スマホプリペイド - スマホでギフト",
        imgRx: "https://www13.a8.net/0.gif?a8mat=4AVAC8+DDNP6A+5IYS+5YJRM"
    }
];

// Randomize order on build (or render)
const shuffledAds = ads.sort(() => 0.5 - Math.random());
---

<div class={`w-full bg-gray-900 border border-gray-800 rounded-lg flex flex-col items-center justify-center gap-2 overflow-hidden relative my-8 group p-6`}>
    <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/dark-matter.png')] opacity-30"></div>
    <span class="text-xs text-gray-500 uppercase tracking-widest font-bold z-10 mb-2">Sponsored</span>
    
    <div class="z-10 flex flex-col gap-3 w-full max-w-3xl items-center">
        <!-- Banner Ads Container -->
        <div class="flex flex-wrap justify-center gap-4 w-full mb-2">
            <!-- First Ad Banner -->
            <div>
                <a href="https://px.a8.net/svt/ejp?a8mat=4AVAC9+7FX302+50+4YTR9D" rel="nofollow">
                <img border="0" width="300" height="250" alt="" src="https://www20.a8.net/svt/bgt?aid=260120601450&wid=001&eno=01&mid=s00000000018030036000&mc=1"></a>
                <img border="0" width="1" height="1" src="https://www16.a8.net/0.gif?a8mat=4AVAC9+7FX302+50+4YTR9D" alt="">
            </div>

            <!-- Second Ad Banner -->
            <div>
                <a href="https://px.a8.net/svt/ejp?a8mat=4AVAC9+7MGUNM+CO4+2NAN35" rel="nofollow">
                <img border="0" width="300" height="250" alt="" src="https://www21.a8.net/svt/bgt?aid=260120601461&wid=001&eno=01&mid=s00000001642016006000&mc=1"></a>
                <img border="0" width="1" height="1" src="https://www12.a8.net/0.gif?a8mat=4AVAC9+7MGUNM+CO4+2NAN35" alt="">
            </div>
            </div>
    </div>
        
        <div class="flex flex-col gap-3 w-full max-w-xs items-center">
        
        {shuffledAds.map(ad => (
            <div class="text-center w-full">
                <a href={ad.href} rel="nofollow" class="block w-full py-2 px-4 rounded bg-gray-800/80 hover:bg-gray-700 text-sm md:text-base text-[var(--color-minecraft-green)] hover:text-white font-bold transition-all border border-gray-700/50 hover:border-[var(--color-diamond-blue)]/50">
                    {ad.label}
                </a>
                <img border="0" width="1" height="1" src={ad.imgRx} alt="" class="hidden">
            </div>
        ))}
    </div>
</div>
