---
import '../styles/global.css';
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Minecraft Technical Blog" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <!-- Google Fonts: Kanit (Block-like) and Inter (Readable) -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Kanit:wght@600;800&display=swap" rel="stylesheet">
		<title>{title}</title>
        <meta name="google-site-verification" content="UA1P81sDUA2v2M2BvwUWc7EpJjUvmMlCKo6qiEo4-Po" />
        <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1512073147650303" crossorigin="anonymous"></script>
	</head>
	<body class="bg-gray-900 text-gray-100 min-h-screen flex flex-col md:flex-row font-body">
		<Sidebar />
        
        <div class="flex-1 flex flex-col max-w-7xl mx-auto w-full min-h-screen">
            <main class="flex-1 p-6">
                <slot />
            </main>
            <Footer />
        </div>
	</body>
</html>
