---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-gray-900 text-gray-100">
		<Header />
		<main class="max-w-6xl mx-auto px-4 py-8">
			<section>
				<div class="flex items-center justify-between mb-8">
					<h2 class="text-3xl font-bold tracking-tight flex items-center gap-3">
						最新記事 <span class="text-gray-500 text-xl font-normal">Latest Vibes</span>
					</h2>
				</div>

				<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{
						posts.map((post) => (
							<li class="group relative bg-gray-800 rounded-xl overflow-hidden border border-gray-700 hover:border-[var(--color-minecraft-green)] transition-all duration-300 hover:shadow-[0_0_20px_rgba(0,255,0,0.2)] hover:-translate-y-1">
								<a href={`/blog/${post.slug}/`}>
									<div class="relative aspect-video overflow-hidden">
											<Image 
												width={720} 
												height={360} 
												src={post.data.heroImage} 
												alt="" 
												class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
											/>
										{/* カテゴリバッジ */}
										{post.data.category && (
											<div class="absolute top-4 right-4 bg-[var(--color-minecraft-green)] text-black text-xs font-bold px-2 py-1 rounded uppercase tracking-wider shadow-lg">
												{post.data.category}
											</div>
										)}
									</div>
									<div class="p-5">
										<div class="flex gap-2 mb-3 text-xs text-gray-400 font-mono">
											<FormattedDate date={post.data.pubDate} />
											{post.data.tags && post.data.tags.map(tag => (
												<span class="bg-gray-700 px-2 py-0.5 rounded text-[var(--color-minecraft-green)]">#{tag}</span>
											))}
										</div>
										<h4 class="text-xl font-bold mb-2 leading-tight group-hover:text-[var(--color-minecraft-green)] transition-colors">
											{post.data.title}
										</h4>
										<p class="text-gray-400 text-sm line-clamp-2">
											{post.data.description}
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
