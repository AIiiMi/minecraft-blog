---
import Layout from '../layouts/Layout.astro';
import ArticleCard from '../components/ArticleCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Craft Vibe - Minecraft Tech Blog">
	<section class="mb-12">
        <h1 class="text-3xl md:text-5xl font-bold mb-8 font-heading text-white">
            最新記事 <span class="text-2xl text-gray-500 font-normal ml-2">Latest Vibes</span>
        </h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 gap-6">
            {posts.map((post) => (
                <ArticleCard
                    title={post.data.title}
                    excerpt={post.data.description}
                    version={post.data.version}
                    date={post.data.pubDate.toLocaleDateString('ja-JP')}
                    slug={post.slug}
                    tags={post.data.tags}
                    image={post.data.heroImage}
                />
            ))}
        </div>
    </section>
</Layout>
